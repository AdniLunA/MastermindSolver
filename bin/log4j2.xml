<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <File name="MyFile" fileName="logs\logfiles.log" immediateFlush="true"
              append="false">
            <!-- logger{x} -> x = precision: how many parts of file should be displayed? -->
            <PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss} %-5level %-24logger{1} %-15method: %message %n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="MyFile" level="info"/>
        </Root>
    </Loggers>
</Configuration>